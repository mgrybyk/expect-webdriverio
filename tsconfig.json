{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["ES2018", "DOM"],
    "strictBindCallApply": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "webdriverio/async",
      "@types/jest"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts"
  ]
}
